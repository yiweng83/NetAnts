<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/functionbg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/UE"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="PING SIZE" />

        <EditText
            android:id="@+id/PingPackageSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/biankuang"
            android:ems="10"
            android:hint="Ping Package Size"
            android:inputType="numberSigned" >

            <requestFocus />
        </EditText>
    </LinearLayout>

        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="PING COUNT" 
                />

    <EditText
        android:id="@+id/PingCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ping Count"
        android:background="@drawable/biankuang"
        android:inputType="numberSigned"/>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="PING ADDRESS" />

    <EditText
        android:id="@+id/PingDefaultAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PingDefaultAddress"
        android:background="@drawable/biankuang"
        android:inputType="textPostalAddress" />
</LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="URL ADDRESS" />

    <EditText
        android:id="@+id/UrlDefaultAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="UrlDefaultAddress"
        android:background="@drawable/biankuang"
        android:inputType="textPostalAddress" />
</LinearLayout>
</LinearLayout>
