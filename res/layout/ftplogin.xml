<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/functionbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
         >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/a2"
            android:layout_marginLeft="70sp" />

        <TextView
            android:id="@+id/textView_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Login"
            android:textSize="25sp" 
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"/>    
            
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp" >

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text="Address:" />

        <EditText
            android:id="@+id/editText_address"
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_marginRight="10sp"
            android:layout_weight="0.45"
            android:background="@drawable/biankuang"
            android:paddingLeft="5sp"
            android:ems="10" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"  >

        <TextView
            android:id="@+id/textView_user"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text="User:" />

        <EditText
            android:id="@+id/editText_user"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:ems="10"
            android:paddingLeft="5sp" 
            android:background="@drawable/biankuang"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp" >

        <TextView
            android:id="@+id/textView_password"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text="PassWord:" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:ems="10"
            android:paddingLeft="5sp"
            android:background="@drawable/biankuang" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox_saveuserinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SaveUserInfo" 
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"/>

    <CheckBox
        android:id="@+id/checkBox_cleanrecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="using new file" />
    
        <CheckBox
            android:id="@+id/checkBox_disablemomentaryrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="disable momentary rate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp" >

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:text="LOGIN" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </RadioGroup>

</LinearLayout>